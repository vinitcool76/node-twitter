extends ../layouts/default

block content
  .analytics
    h1 Activity
    each activity in activities
      - var senderName = activity.sender.name ? activity.sender.name : activity.sender.username
      - var receiverName = activity.receiver.name ? activity.receiver.name : activity.receiver.username
      - var notificationText = senderName + ' ' + activity.activityStream + ' ' + receiverName
      p 
        i(class="far fa-bell notification-icon")
        span #{moment(activity.createdAt).format("MMM D, YYYY [at] h:mm a, ")}
        span #{notificationText}
